#include<avr/io.h>
#include<avr/interrupt.h>
#include<util/delay.h>
//unsigned char sec1=0,sec2=0,min1=0,min2=0,hour1=0,hour2=0;
unsigned char digits[6]={0};
ISR(TIMER1_COMPA_vect){
	if(digits[0]<9){
	digits[0]++;
	}
	else{
		digits[0]=0;
		if(digits[1]<6){
		digits[1]++;
		}
		else{
			digits[1]=0;
			if(digits[2]<9){
				digits[2]++;
			}
			else{
				digits[2]=0;
				if(digits[3]<6){
					digits[3]++;
				}
				else{
					digits[3]=0;
				}
				if(digits[4]<9){
					digits[4]++;
				}
				else{
					digits[4]=0;
					if(digits[5]<9){
						digits[5]++;
					}
					else{
						digits[5]=0;
					}
				}
			}
		}
	}
}
void Timer1_Ini(void){
	TCNT1=0;
	OCR1A=1000;
	TIMSK|=(1<<4);
	TCCR1A=0x08;
	TCCR1B=0x0D;
	SREG|=(1<<7);
}
void Pins_Ini(void){
	DDRC|=0x0F;
	DDRA|=0x3F;
	DDRD&=~0x0C;
	DDRB&=~(1<<2);
	PORTD|=(1<<2);
	PORTB|=(1<<2);
	PORTC&=0xF0;
}
int main(void){
	Pins_Ini();
	Timer1_Ini();
	while(1){
			PORTA=(PORTA&0xC0)|0x01;
			PORTC=(PORTC&0xF0)|digits[0]; //display number
			_delay_ms(5);
			PORTA=(PORTA&0xC0)|0x02;
			PORTC=(PORTC&0xF0)|digits[1];
			_delay_ms(5);
			PORTA=(PORTA&0xC0)|0x04;
			PORTC=(PORTC&0xF0)|digits[2];
			_delay_ms(5);
			PORTA=(PORTA&0xC0)|0x08;
			PORTC=(PORTC&0xF0)|digits[3];
			_delay_ms(5);
			PORTA=(PORTA&0xC0)|0x10;
			PORTC=(PORTC&0xF0)|digits[4];
			_delay_ms(5);
			PORTA=(PORTA&0xC0)|0x20;
			PORTC=(PORTC&0xF0)|digits[5];
			_delay_ms(5);
	}
}

